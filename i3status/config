general{
  colors = true
  interval = 1
  color_good = "#93fc6a"
  color_bad = "#fc6a6a"
  color_degraded = "#fcf06a"
}

order += "cpu_temperature 0"
order += "battery 0"
order += "disk /"
order += "ethernet enp5s0"
order += "wireless wlp3s0"
order += "volume master"
order += "time"

time {
	format = "%a %Y-%m-%d %H:%M:%S"
}

